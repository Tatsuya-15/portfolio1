<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-9 w-80">
      <h2>Log in</h2>
      <%= form_with model: @member, url: member_session_path, local: true do |f| %>
      <table class="table text-center table-borderless">
        <tr>
          <td>e-mail</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td>password</td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
      </table>
  
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-xs-9">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


