<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-9 w-80">

      <h2>メンバー登録</h2>

      <%= form_with model: @member, url: member_registration_path, id: 'new_member', class: 'new_member', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      <table class="table text-center table-borderless">
        <tr>
          <td>姓</td>
          <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
        </tr>
        <tr>
          <td>名</td>
          <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
        </tr>
      　<tr>
          <td>セイ</td>
          <td><%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %></td>
        </tr>
        <tr>
          <td>メイ</td>
          <td><%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td>
            パスワード
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 字以上)</em>
            <% end %>
          </td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td>パスワード（確認）</td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </table>
       <div class="actions text-center">
          <%= f.submit "登録", class: "btn btn-success" %>
        </div>
     </div>
    </div>
      <% end %>
      
    <div class="row justify-content-center mt-5">
      登録済みの場合は<%= link_to "こちら", new_member_session_path %>
    </div>
</div>
