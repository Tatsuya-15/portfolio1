<div class="container">
  <div class="row justify-content-end">
  	<%= render 'search/header' %>
  </div>
  <div class="row">
    <div class="col-xs-10">
      <h2>取引先一覧</h2>
    </div>
    <div class="col-xs-10 ml-3">
      <%= link_to "new", new_customer_path, class: 'btn btn-outline-warning'  %>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-xs-10  w-100">
      <table class="table text-center">
        <tr>
          <th style="width: 20%">企業名</th>
          <th style="width: 40%">住所</th>
          <th style="width: 15%">電話番号</th>
          <th style="width: 15%">最終訪問日</th>
          <th style="width: 10%">担当営業</th>
        </tr>
        <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= link_to customer_path(customer.id) do %>
            <%= customer.company %>
            <% end %>
          </td>
          <td><%= customer.address %></td>
          <td><%= customer.tel %></td>
          <td><%= customer.last_visit_date %></td>
          <td>
            <%= link_to member_path(customer.member.id) do %>
            <%= customer.member.last_name %><%= customer.member.first_name %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>
