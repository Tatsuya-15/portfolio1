<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <h2>取引先詳細</h2>
      <table>
        <tr>
          <th>企業名</th>
          <th>担当者名</th>
          <th>住所</th>
          <th>電話番号</th>
          <th>メールアドレス</th>
          <th>最終訪問日</th>
          <th>メモ</th>
        </tr>
        <tr>
          <td><%= @customer.company %></td>
          <td><%= @customer.name %></td>
          <td><%= @customer.address %></td>
          <td><%= @customer.tel %></td>
          <td><%= @customer.email %></td>
          <td><%= @customer.last_visit_date %></td>
          <td><%= @customer.memo %></td>
        </tr>
      </table>
      <% if @customer.member == current_member %>
        <%= link_to "編集", edit_customer_path(@customer) %>
        <%= link_to "削除", customer_path(@customer), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      <% end %>

    </div>
  </div>
</div>