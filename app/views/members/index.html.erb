<div class="container">
  <div class="row justify-content-end">
  	<%= render 'search/header' %>
  </div>

  <div class="row justify-content-center">
    <div class="col-xs-9 w-100">
      <h3><%= image_tag 'members.png', :size =>'50x50' %> 営業一覧</h3>
      <table class="table text-center">
        <tr>
          <th></th>
          <th>名前</th>
          <th>メールアドレス</th>
          <th></th>
        </tr>
        <% @members.each do |member| %>
        <tr>
          <td style="width: 20%"><%= attachment_image_tag member, :member_image, fallback: "no_image.png", size: '80x80'%></td>
          <td style="width: 20%"><%= member.last_name %><%= member.first_name %></td>
          <td style="width: 40%"><%= member.email %></td>
          <td style="width: 20%"><%= link_to "担当企業", member_path(member.id) %></td>
        </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>
