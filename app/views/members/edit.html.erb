<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-xs-9">
      <h3>メンバー情報編集</h3>
      <%= form_with model:@member, local:true do |f| %>
       <table class="table">
		    <tbody>
		    	<tr>
					  <td>写真</td>
					  <td></td>
			    	<td><%= attachment_image_tag @member, :member_image, fallback: "no_image.png", size:'100x100'%></td>
			    	<td></td>
			    	<td><%= f.attachment_field :member_image, placeholder: "プロフィール画像" %></td>
			    </tr>
		    	<tr>
				    <td>名前</td>
			    	<td>(姓)</td>
			    	<td><%= f.text_field :last_name %></td>
			    	<td>(名)</td>
			    	<td><%= f.text_field :first_name %></td>
			    </tr>
			    <tr>
				    <td>フリガナ</td>
			    	<td>(セイ)</td>
			    	<td><%= f.text_field :kana_last_name %></td>
				    <td>(メイ)</td>
				    <td><%= f.text_field :kana_first_name %></td>
		    	</tr>
			    <tr>
				    <td>メールアドレス</td>
				    <td></td>
				    <td colspan="2"><%= f.text_field :email, class: "w-100" %></td>
				    <td></td>
				    <td></td>
			    </tr>
		    </tbody>
	     </table>
	     <div class="row justify-content-center">
	     	<%= f.submit "　変　更　", class:"btn btn-primary" %>
	     </div>
	     
	     <% end %> 
	     
      
    </div>
  </div>
</div>